{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "build",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
  ]
}
